class Solution {
  public:
    int findPair(int n, int x, vector<int> &arr) {
        // code here
        sort(arr.begin(),arr.end());
        int i=0;
        int j=1;
        while(i<n and j<n){
            if(i!=j and (arr[j]-arr[i]) == x){
                return 1;
            }
            else if((arr[j]-arr[i])<x){
                j++;
            }
            else{
                i++;
            }
        }
        return -1;
    }
};
